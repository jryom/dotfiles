#!/usr/bin/env fish

set -l update_commands \
    "make mise-update" \
    "make pnpm-update" \
    "make brew-update" \
    "make gh-update" \
    "make fisher" \
    "make uv-update"

function print_header
    set_color --bold
    echo ""
    echo --------------------------------------------------
    echo "   " $argv
    echo --------------------------------------------------
    echo ""
    set_color normal
end

for cmd in $update_commands
    print_header "$cmd"
    fish -c "$cmd"
end
